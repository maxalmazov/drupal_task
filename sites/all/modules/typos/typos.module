function _typos_save_report($form, $form_state)
{
    $commands = [];
    $insert_db = db_insert('typos_report')->fields([
        'entity_type' => $form_state['values']['typos_entity_type'].'('.$form_state['values']['bundle'].')',
        'url' => $form_state['values']['typos_url'],
        'node_id' => $form_state['values']['typos_nid'],
        'createdAt' => time(),
        'field_name' => $form_state['values']['typos_label'].'('.$form_state['values']['typos_field_name'].')',
        'user_id' => $form_state['values']['typos_uid'],
        'user_ip' => $_SERVER['REMOTE_ADDR'],
        'text' => $form_state['values']['typos_context'],
        'comment' => $form_state['values']['typos_comment'],
    ])->execute();
    $commands[] = ajax_command_invoke(
        NULL,
        'typos_js_callback', [$form_state['values']['typos_comment'] . ' => ' . $form_state['values']['typos_context'] . ' => ' . $form_state['values']['typos_url']]
    );
    $commands[] = ajax_command_append('#typos-report-wrapper', theme('typos_report'));

    $info_instance = field_info_instance($form_state['values']['typos_entity_type'],$form_state['values']['typos_field_name'],$form_state['values']['bundle']);
    $to = $info_instance['typos']['email'];
    $from = variable_get('site_mail');

    $message = drupal_mail('system', '', $to, '', '', $from, FALSE);
    $message['subject'] = 'Typo report';
    $message['body'] = [];
    $message['body'][] =
        'Entity_type: '.$form_state['values']['typos_entity_type'].'('.$form_state['values']['bundle'].')'.PHP_EOL.
        'URL: '.$form_state['values']['typos_url'].PHP_EOL.
        'Node ID: '.$form_state['values']['typos_nid'].PHP_EOL.
        'Date: '.time().PHP_EOL.
        'Field name: '.$form_state['values']['typos_label'].'('.$form_state['values']['typos_field_name'].')'.PHP_EOL.
        'User ID: '.$form_state['values']['typos_uid'].PHP_EOL. 'User IP: '.$_SERVER['REMOTE_ADDR'].PHP_EOL.
        'Typo context: '.$form_state['values']['typos_context'].PHP_EOL.
        'User comment: '.$form_state['values']['typos_comment'].PHP_EOL
    ;

    $system = drupal_mail_system('system', '');

    $message = $system->format($message);

    $message['result'] = $system->mail($message);

    return ['#type' => 'ajax', '#commands' => $commands];
}

/**
 * Implements hook_cron()
 */
function typo_cron() {
    // Remove old reports.
    $ttl = variable_get('typo_reports_ttl', 4320);
    if ($ttl > 0) {
        db_delete('typos_report')->condition('createdAt', time() - $ttl * 60, '<')->execute();
    }
}

